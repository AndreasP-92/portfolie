<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sample Site</title>
     <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"/>
   <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
</head>
<body>
  <div class="container">
    <!-- Static navbar -->
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/culturalcenter/dashboard">Home</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">

            <li><a href="/culturalcenter/logout">Logout</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div><!--/.container-fluid -->
    </nav>

      
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >

      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><%=user[0].first_name%>, <%=user[0].last_name%></h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="/images/photo.jpg" class="img-circle img-responsive"> </div>
            <div class=" col-md-9 col-lg-9 "> 
              <table class="table table-user-information">
                <tbody>
                  <tr>
                    <td>User Name:</td>
                    <td><%=user[0].user_name%></td>
                  </tr>
                  <tr>
                    <td>Mobile:</td>
                    <td><%=user[0].mob_no%></td>
                  </tr>
                  <tr>
                      <td>Email:</td>
                      <td><%= user[0].user_mail %></td>
                    </tr>
                </tbody>
              </table>
              
              <% if(user[0].newsletter == 0){ %>
                <form action="/json/login/newsletter/<%=user[0].id %>" method="post" >
                  <input type="submit" value="Tilmeld Nyhedsbrev" encType="multipart/form-user">
                </form>
              <% } else if(user[0].newsletter == 1){ %>
                <form action="/json/login/newsletter/unsub/<%=user[0].id %>" method="post" >
                  <input type="submit" value="Frameld Nyhedsbrev" encType="multipart/form-user">
                </form>
              <% } %>
            </div>
          </div>
        </div>
    </div>
</div>
</body>
</html>