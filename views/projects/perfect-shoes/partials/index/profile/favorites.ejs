<link rel="stylesheet" href="/resources/pages/perfect-shoes/resources/css/cssClient/shop/allProducts.css">
<link rel="stylesheet" href="/resources/pages/perfect-shoes/resources/css/cssClient/profile/favorites.css">

<% allProducts.forEach(function(shoe){ %>

    <div class="block item clearfix">
        <div class="top">
            <ul>
               
                <li><span class="converse">
                        <%= shoe.product_name %></span></li>
                <li><a href="/perfect-shoes/product/<%= shoe.product_id %>" class=""><i class="fa fa-shopping-basket" aria-hidden="true"></i>
                    </a></li>
            </ul>
        </div>

        <div class="middle">
            <a href="/perfect-shoes/product/<%= shoe.product_id %>">
                <img src="/resources/pages/perfect-shoes/resources/media/shop/<%= shoe.product_img %>" alt="<%= shoe.product_name %>" />
            </a>
        </div>

        <div class="bottom">
            <div class="heading">
                <!-- TEXTT HERE -->
            </div>
            <div class="info">Neon converse edition</div>
            <div class="style">Color: Teal/Navy/White / Style: 151116C</div>

            <% if(shoe.product_sale_active != 0){%>
            <div class="price">
                <p> New Price: €
                    <%= shoe.product_sale_price %>
                </p>
                <span class="old-price">Before €
                    <%= shoe.product_price %></span>
            </div>
            <% } else { %>
            <div class="price">
                <p>€
                    <%= shoe.product_price %>
                </p>

                <span class="old-price"></span>
            </div>
            <% } %>

        </div>

    </div>
    <% }) %>

</div>