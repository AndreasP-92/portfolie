<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href="/resources/pages/perfect-shoes/resources/css/cssClient/shop/allProducts.css">
<div class="shopMain">

    <!-- PRODUCTS ================================= -->

    <div class="productMain clearfix">

<!-- PAGE CHANGE ================================= -->
        
        <div class="pageNumber clearfix">
                <%if (shopPageCheck != 'search')  { %>
                    <!-- <p class="pageBack"> Pages : </p> -->
                    <!-- <a href="" class="pageBack">Back </a> -->
                    <% var number = 1 %>
        
                    <% for(i = 0; i <= productCount.length; i++){ %>
                    
                        <% if(i% 11 == 0){ %>
                            <% if( genderId != 0){ %>
                                <a class="pageNumbers" href='/perfect-shoes/shop/<%= productCount[0].fk_gender %>/<%= i %>'>
                                <%= number++ %></a>
                    
                            <% } else { %>
                                <a class="pageNumbers" href="/perfect-shoes/shop/0/<%= i %>">
                            <%= number++ %></a>
                            <% } %>
                        <% } %>
                    <% } %>
                    <!-- <a href="" class="pageNext"> Next</a> -->
                <% } %>
        </div>

<!-- CATEGPRIES ================================= -->

        <%if (shopPageCheck != 'search')  { %>

        <div class="categoryButtons clearfix">
            <div class="oneCategoryButton clearfix btn btn-dark">
                <a href="/perfect-shoes/shop/0/0">All Categories</a>

            </div>
            <div class="oneCategoryButton clearfix btn btn-dark">
                <a href="/perfect-shoes/shop/1/0">Mens Ware</a>

            </div>
            <div class="oneCategoryButton clearfix btn btn-dark">
                <a href="/perfect-shoes/shop/2/0">Womans Ware</a>

            </div>
        </div>
        <% } %>

<!-- PRODUCTS ======================== -->

        <% allProducts.forEach(function(shoe){ %>

        <div class="block item clearfix">
            <div class="top">
                <ul>
                    <% if(!username){ %>
                        <li><a href="/perfect-shoes/login"><i class="fa fa-star-o" aria-hidden="true"></i></a></li>
                    <% } else{ %>
                            <form action="/perfect-shoes/favorite/<%= shoe.product_id %>" method="POST">

                            <input type="hidden" value="<%= shoe.product_id %>">
                            <button style="border:none; background-color: white;"><i class="fa fa-star-o" aria-hidden="true"></i></button>
                        </form>
                    <% } %>
                    <li><span class="converse">
                            <%= shoe.product_name %></span></li>
                    <li><a href="/perfect-shoes/product/<%= shoe.product_id %>" class=""><i class="fa fa-shopping-basket" aria-hidden="true"></i>
                        </a></li>
                </ul>
            </div>

            <div class="middle">
                <a href="/perfect-shoes/product/<%= shoe.product_id %>">
                    <img src="/resources/pages/perfect-shoes/resources/media/shop/<%= shoe.product_img %>" alt="<%= shoe.product_name %>" />
                </a>
            </div>

            <div class="bottom">
                <div class="heading">
                    <!-- TEXTT HERE -->
                </div>
                <div class="info">Neon converse edition</div>
                <div class="style">Color: Teal/Navy/White / Style: 151116C</div>

                <% if(shoe.product_sale_active != 0){%>
                <div class="price">
                    <p> New Price: €
                        <%= shoe.product_sale_price %>
                    </p>
                    <span class="old-price">Before €
                        <%= shoe.product_price %></span>
                </div>
                <% } else { %>
                <div class="price">
                    <p>€
                        <%= shoe.product_price %>
                    </p>

                    <span class="old-price"></span>
                </div>
                <% } %>

            </div>

        </div>
        <% }) %>

    </div>

<!-- PAGE CHANGE ================================= -->

    <div class="pageNumber clearfix">
            <%if (shopPageCheck != 'search')  { %>
                <!-- <p class="pageBack"> Pages : </p> -->
                <!-- <a href="" class="pageBack">Back </a> -->
                <% var number = 1 %>
    
                <% for(i = 0; i <= productCount.length; i++){ %>
                
                    <% if(i% 11 == 0){ %>
                        <% if( genderId != 0){ %>
                            <a class="pageNumbers" href='/perfect-shoes/shop/<%= productCount[0].fk_gender %>/<%= i %>'>
                            <%= number++ %></a>
                
                        <% } else { %>
                            <a class="pageNumbers" href="/perfect-shoes/shop/0/<%= i %>">
                        <%= number++ %></a>
                        <% } %>
                    <% } %>
                <% } %>
                <!-- <a href="" class="pageNext"> Next</a> -->
            <% } %>
    </div>

</div>

<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

